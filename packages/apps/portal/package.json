{
  "name": "@project/portal",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint src/** --ignore-pattern 'node_modules/*' --ignore-pattern 'public/*' --max-warnings=0 --format=codeframe",
    "predeploy": "yarn run build",
    "analyze": "source-map-explorer 'build/static/js/*.js'"
  },
  "dependencies": {
    "@project/components": "1.0.0",
    "@project/core": "1.0.0",
    "@react-workspaces/react-scripts": "^3.4.0-alpha-01",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "formik": "^2.2.9",
    "history": "^5.0.0",
    "i18next": "^19.3.2",
    "i18next-browser-languagedetector": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^12.0.5",
    "react-helmet": "^6.0.0",
    "react-i18next": "^11.3.3",
    "react-modal": "^3.14.4",
    "react-redux": "^7.2.0",
    "react-router-dom": "^6.0.0",
    "react-select": "^5.2.2",
    "recompose": "^0.30.0",
    "redux": "^4.0.5",
    "redux-injectors": "^1.3.0",
    "redux-saga": "^1.1.3",
    "redux-saga-thunk": "^0.7.3",
    "styled-components": "^5.0.1",
    "swiper": "6.8.4"
  },
  "devDependencies": {
    "enzyme": "^3.11.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-prettier": "^3.1.2",
    "source-map-explorer": "^2.2.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/setupTests.{js,jsx}",
      "!src/index.{js,jsx}",
      "!src/serviceWorker.{js,jsx}",
      "!src/**/*.(spec|test|stories).{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    }
  }
}
